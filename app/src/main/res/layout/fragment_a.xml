<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#78002e"
    android:weightSum="10"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txtTitle"
        android:background="#b71c1c"
        android:text="CHIẾC NÓN KÌ DIỆU"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#FFFF00"
        android:gravity="center"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <ImageView

        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_gravity="center"
        android:id="@+id/img"
        android:layout_weight="6"
        android:src="@drawable/non"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <Button
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:id="@+id/btnChoiThoi"
        android:background="@drawable/trangthai_button"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textColor="#FFFF00"
        android:text="Chơi Thôi"
      />



    <Button
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:id="@+id/btnTranhDau"
        android:background="@drawable/trangthai_button"
        android:textColor="#FFFF00"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Tranh Đấu"
         />

    <Button
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:id="@+id/btnBangXepHang"
        android:background="@drawable/trangthai_button"
        android:textColor="#FFFF00"
        android:text="Bảng Xếp Hạng"
        android:layout_width="200dp"
        android:layout_height="30dp"
        />
</LinearLayout>

